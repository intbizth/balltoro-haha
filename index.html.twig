    </div><!-- end row -->
</div><!-- end container setting -->


    <!-- Meme container -->
<div class="container myContainer">
    <div class="row center">
        <button class="btn btn-large" ng-click="reset()">Reset</button>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<button class="btn btn-large btn-primary" ng-click="create()">Save Image</button>
        <button class="btn btn-large" ng-click="applyPosition(0)">APY</button>

        <br/>
        <b>Select Meme: <b/>
        <div class="preview-wrap meme">
            <img ng-src="{{ '{{pic.path}}' }}" ng-repeat="pic in memeList" ng-click="applyImage(pic.path)" class="memebox"></img>
        </div>

        <br/><br/><br/><br/><br/>
        <button class="btn btn-large" ng-click="saveIt()">add Origin</button>
        <button class="btn btn-large" ng-click="removeIt()">remove Origin</button>

        <b>กว้าง: </b>
        <input width="75px" type="number"  style="height: 30px"  ng-model='imgWidth' ng-change="applyChange()" placeholder="100" value="100"/>px
        <br/>
    </div>
</div>


