<div ng-controller="PhotoListController">
    <ul class="photo-list row" when-scrolled="photos.nextPage()">
        <li class="col-xs-6 col-md-3" ng-repeat='item in photos.items' ng-click="selectPicture(item)" ng-class="{selected: item.id == selectedItem}">
            <img class="thumbnail"
                ng-src="{{ '{{ item._links.photo_sizing_url.href }}' }}"
                title="{{ '{{ item.title }}' }}">
        </li>
        <li class="loading" ng-show="photos.busy">Loading data...</li>
    </ul>
</div>
