                <tr>
                    <td>Shadow:</td>
                    <td><ul class="picker"><li class="colorPicker" ng-repeat="color in shadows" ng-class="{selected: (color==memeArray[selectedMemeText].shadowColor)}" ng-click="pickShadowColor(selectedMemeText, color)" ng-style="{'background-color':color};"></li></ul></td>
