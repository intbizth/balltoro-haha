{% macro success(text, header = null) %}
    <div class="alert alert-success">
        {% if header %}
            <h4 class="ui header">{{ header|default('ui.trans.alert.success'|trans) }}</h4>
        {% endif %}
        <p>{{ text|raw }}</p>
    </div>
{% endmacro %}

{% macro info(text, header = null) %}
    <div class="alert alert-info">
        {% if header %}
            <h4 class="ui header">{{ header|default('ui.trans.alert.info'|trans) }}</h4>
        {% endif %}

        <p>{{ text|raw }}</p>
    </div>
{% endmacro %}

