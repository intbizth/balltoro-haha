{% endmacro %}

{% macro message(text, header = null, ui = null, icon=null) %}
    <div class="alert {{ ui }}{% if icon %} icon{% endif %}">
        {% if icon %}<i class="{{ icon }} icon"></i>{% endif %}
        <div class="content">
            {% if header %}
                <h4 class="ui header">{{ header }}</h4>
            {% endif %}

            <p>{{ text|raw }}</p>
        </div>
    </div>
{% endmacro %}
